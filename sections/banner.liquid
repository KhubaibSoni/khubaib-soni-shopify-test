  "name": "Banner",
  "tag": "section",
  "class": "custom-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "middle-text",
      "label": "Middle Navbar text"
    },
    {
      "type": "text",
      "id": "Navbar-btn",
      "label": "Navbar button Text"
    },
    {
      "type": "text",
      "id": "Hero-title",
      "label": "Hero Title"
    },
    {
      "type": "text",
      "id": "Hero-para",
      "label": "Hero paragraph"
    },
    {
      "type": "text",
      "id": "Hero-btn-txt",
      "label": "Hero Button Text"
    },
     {
      "type": "text",
      "id": "Hero-bottom-text",
      "label": "Hero Bottom Text"
    }
  ],
  "default": {
    "settings": {
      "middle-text": "Find the ideal gift for your loved ones."
    }
  }
}
{% endschema %}
